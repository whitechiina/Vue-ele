// 定义一个函数,传递一个变量
border-1px($color)
    position: relative
    &:after
        display: block
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        border-top: 1px solid $color
        content:'' 

border-none()
  &:after
    display: none
bg-image($url)
  background-image: url('img/'+$url+'@2x.png')
//   如果图片dip为3 我们就使用3x结尾的图片
  @media(-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3){
    background-image: url('img/'+$url+'@3x.png')
}
